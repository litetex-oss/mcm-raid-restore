{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "rebaseWhen": "behind-base-branch",
  "customManagers": [
    {
      "customType": "regex",
      "fileMatch": [ "gradle.properties"],
      "matchStrings": [ "yarn_mappings=(?<currentValue>\\S+)" ],
      "datasourceTemplate": "custom.fabric-yarn-latest"
    }
  ],
  "customDatasources": {
    "fabric-yarn-latest": {
      "defaultRegistryUrlTemplate": "https://raw.githubusercontent.com/litetex/mcd-yarn-latest-versions/dev/latest-version.txt",
      "format": "plain"
    }
  },
  "packageRules": [
    {
      "description": "Workaround, see https://github.com/gradle/gradle/issues/27035",
      "matchPackagePatterns": [
        "^com.google.guava:guava"
      ],
      "datasources": [
        "maven"
      ],
      "matchCurrentVersion": "0",
      "enabled": false
    },
    {
      "description": "This is a mock artifact",
      "matchPackagePatterns": [
        "^com.mojang:minecraft"
      ],
      "datasources": [
        "maven"
      ],
      "enabled": false
    },
    {
      "description": "Fabric has a custom server (see settings.gradle)",
      "matchPackagePatterns": [
        "^net.fabricmc"
      ],
      "excludePackagePatterns": [
        "^net.fabricmc:yarn"
      ],
      "datasources": [
        "maven"
      ],
      "defaultRegistryUrls": [
        "https://maven.fabricmc.net/"
      ]
    },
    {
      "description": "Disable yarn as it's managed by a custom manager",
      "matchPackagePatterns": [
        "^net.fabricmc:yarn"
      ],
      "datasources": [
        "maven"
      ],
      "enabled": false
    }
  ]
}
